<div class="container mt-4">

<%= render "components/form", location: @pet.location, species: @pet.species %>


<div class="card-body text-center bg-success position-relative mt-4">
  <div class="d-flex text-left ">
  </div>
<%= cl_image_tag @pet.picture.key,
      width: 150, height: 150, crop: :thumb, gravity: :face, style: "border-radius:50%" %>
<h5 class="mt-4">Name: <%= @pet.name %></h5>

<p class="mb-0">Description:</p> 
<p><%= @pet.description %></p>
<p class="mb-0">Location:</p> <p><%= @pet.location %></p>
<p class="mb-0">Owned by:</p> 
 <p><%= @pet.user.first_name %>
  <%= @pet.user.last_name %>
</p>
<%= link_to "Create offer for pet", new_pet_offer_path(@pet), class: "btn btn-primary" if current_user == @pet.user%>
<br>
<%= link_to "Dashboard", dashboard_path, class: "btn btn-primary mt-4" %>
</div>
