<div class="container">
<div class="row mt-4 mb-4">
<% @offers_search.each do |offer| %>
    <div class="col-12 col-md-6 col-lg-3">
      <div class="card-product">
        <%= cl_image_tag(offer.pet.picture.key) %>
        <div class="card-product-infos">
          <h2><%= offer.pet.name  %></h2>
          <p><%= offer.start_date %> until <%= offer.end_date %> <strong> in <%= offer.pet.location  %></strong></p>
        </div>
      </div>
    </div>
<% end %>
</div>
</div>