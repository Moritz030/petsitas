<div class="container mt-4">
  <h1 class="mt-3">Welcome to your dashboard</h1>
  <hr>
  <h2>Your Pets</h2>
  <div class="underline"></div>
  <div class="d-flex">
    <% @pets.each do |pet| %>
      <% @pet = pet%>
      <%= render 'components/pet_card' %>
    <% end %>
  </div>
  <%= link_to "Add Pet to profile", new_pet_path, class: "btn btn-primary mt-4 d-flex justify-content-center" %>
  <h2 class="mt-3">Your Offers</h2>
  <div class="underline"></div>
  <div class="mt-4 mb-4">
    <% @offers.each do |offer| %>
      <%= render 'components/dashboard_offer_card', offer: offer %>
    <% end %>
  </div>
  <h2>My Requests</h2>
  <div class="underline"></div>
  <div class="cards">
    <% @requests.each do |request| %>
      <%= render 'components/request_card', request: request  %>
    <% end %>
  </div>
</div>
